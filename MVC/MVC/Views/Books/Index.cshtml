@using MVC.Models
@model List<MVC.Models.Book>

<h1>Lista de Livros</h1>

<table>
    <thead>
        <tr>
            <th>Título</th>
            <th>Autor</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model)
        {
            <tr>
                <td><a href="@Url.Action("Details", "Books", new { id = book.Id })">@book.Title</a></td>
                <td>@book.Author</td>
            </tr>
        }
    </tbody>
</table>
